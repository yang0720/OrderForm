<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FB"
    tools:context=".shop.MyInfoActivity">
    <!--    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:background="@drawable/def_item"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textSize="@dimen/dd_14"
                android:text="昵称"
                android:textColor="@color/t3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/dd_14"
                android:textColor="@color/def_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:id="@+id/tag1"
                android:maxLines="1"
                android:layout_marginRight="12dp"
                android:maxLength="29"
                android:text=""
                android:textColor="@color/right_text"
                android:textColorHint="@color/t9"/>

            <ImageView
                android:src="@drawable/arrow_right"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>
        <include layout="@layout/lines_mat"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/def_item"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textSize="@dimen/dd_14"
                android:text="手机号"
                android:textColor="@color/t3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/dd_14"
                android:textColor="@color/def_red"/>

            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:hint=""
                android:layout_marginRight="12dp"
                android:maxLength="29"
                android:text=""
                android:textColor="@color/right_text"
                android:textColorHint="@color/t9"/>
            <ImageView
                android:src="@drawable/arrow_right"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>
        <include layout="@layout/lines_mat"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/def_item"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textSize="@dimen/dd_14"
                android:text="积分"
                android:textColor="@color/t3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"

                android:gravity="center_vertical"
                android:textSize="@dimen/dd_14"
                android:textColor="@color/def_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:id="@+id/tag3"
                android:maxLines="1"
                android:hint=""
                android:layout_marginRight="12dp"
                android:maxLength="29"
                android:text=""
                android:textColor="@color/right_text"
                android:textColorHint="@color/t9"/>
            <ImageView
                android:src="@drawable/arrow_right"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>
        <include layout="@layout/lines_mat"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/tag5"
            android:background="@drawable/def_item"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"

                android:layout_marginLeft="12dp"
                android:textSize="@dimen/dd_14"
                android:text="中间商"
                android:textColor="@color/t3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/dd_14"
                android:textColor="@color/def_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:id="@+id/tag4"
                android:maxLines="1"
                android:hint=""
                android:layout_marginRight="12dp"
                android:maxLength="29"
                android:text=""
                android:textColor="@color/right_text"
                android:textColorHint="@color/t9"/>
            <ImageView
                android:src="@drawable/arrow_right"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>