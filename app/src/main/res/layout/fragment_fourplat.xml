    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop.ShopMainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="我的"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:id="@+id/tag1"
            android:layout_width="match_parent"
            android:background="@drawable/def_item"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textSize="@dimen/dd_14"
                android:text="分销设置"
                android:textColor="@color/t3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/dd_14"
                android:textColor="@color/def_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:id="@+id/tag1_text"
                android:maxLines="1"
                android:layout_marginRight="12dp"
                android:maxLength="29"
                android:text=""
                android:textColor="@color/right_text"
                android:textColorHint="@color/t9"/>
            <ImageView
                android:src="@drawable/arrow_right"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>
