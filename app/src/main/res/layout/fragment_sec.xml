<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop.ShopMainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="订单"/>
        <LinearLayout
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="fill_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/search_border"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/search_title"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <EditText
                        android:id="@+id/search_text"
                        android:background="@drawable/search_border"
                        android:paddingLeft="7dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:textColor="@color/def_font_nor"
                        android:hint="请输入名称等关键字检索"
                        android:textColorHint="#a4a3a3"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp" />
                </LinearLayout>
                <Button
                    android:id="@+id/search_btn"
                    android:background="@drawable/def_item"
                    android:textColor="@color/t6"
                    android:textSize="@dimen/dd_14"
                    android:text="搜索"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            app:tabMode="fixed"
            android:id="@+id/tableLayouts"
            android:layout_width="match_parent"
            app:tabMaxWidth="0dp"
            app:tabIndicatorColor="#D0021B"
            app:tabSelectedTextColor="#D0021B"
            android:layout_height="42dp"/>

        <!--可滑动的布局内容-->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_view"
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>