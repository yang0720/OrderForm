<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop.ShopMainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="充值"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_12"
            android:layout_marginTop="@dimen/dd_12"
            android:textSize="18sp"
            android:text="请选择充值方式"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/dd_12"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/weixin_pay_icon"
                android:text="微信"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/zhi_pay_icon"
                android:text="支付宝"/>
        </RadioGroup>
        <EditText
            android:id="@+id/tag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_12"
            android:inputType="number|numberDecimal"
            android:layout_marginRight="@dimen/dd_12"
            android:hint="请输入充值金额"/>
        <TextView
            android:id="@+id/tag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:layout_marginLeft="@dimen/dd_12"
            android:layout_marginTop="@dimen/dd_12"
            android:textSize="18sp"
            android:text="1元等于10积分"/>
        <Button
            android:id="@+id/tag13"
            android:layout_width="250dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/main_btn_answer_end"
            android:layout_gravity="center_horizontal"
            android:text="确定充值"
            android:textColor="@color/white"
            android:layout_height="40dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>